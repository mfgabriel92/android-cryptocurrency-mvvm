<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cryptocurrency_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:id="@+id/rl_currencies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/CurrencyTextView"
            android:id="@+id/tv_cryptocurrency_name"
            android:textSize="20sp"
            android:maxLength="12"
            tools:text="Bitcoin" />

        <TextView
            style="@style/CurrencyTextView"
            android:id="@+id/txt_symbol"
            android:layout_below="@+id/tv_cryptocurrency_name"
            android:textSize="12sp"
            tools:text="BTC"/>

        <TextView
            style="@style/CurrencyTextView"
            android:id="@+id/txt_price_usd"
            android:layout_below="@+id/txt_symbol"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorAccent"
            tools:text="$6,605.98"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>